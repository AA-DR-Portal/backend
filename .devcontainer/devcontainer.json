{
	"name": "Backend",
	"dockerComposeFile": "docker-compose-dev.yml",
	"service": "backend",
	"workspaceFolder": "/portal/backend",
	"customizations": {
		"vscode": {
			"extensions": [
				"amazonwebservices.aws-toolkit-vscode",
				"ms-vscode-remote.remote-containers",
				"esbenp.prettier-vscode",
				"ms-azuretools.vscode-docker",
				"p1c2u.docker-compose"
			]
		}
	},
	"postCreateCommand": "pip install -r requirements.txt && gunicorn app:app -w 2 --reload --threads 2 -b 0.0.0.0:3001"
}
